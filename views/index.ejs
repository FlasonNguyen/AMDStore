<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>KStore - AMD's Collaborator</title>
    <link rel="icon" type="image/x-icon" href="images/logo_red.jpg" />

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet'
        type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="stylesheet/owl.carousel.css">
    <link rel="stylesheet" href="stylesheet/style.css">
    <link rel="stylesheet" href="stylesheet/responsive.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="user-menu">
                        <% if(!locals.user) { %>
                            <ul>
                                <li><a href="#" data-toggle="modal" data-target="#SignUpModal"><i
                                            class="fa fa-user"></i>
                                        Sign Up</a></li>
                                <li><a href="#" data-toggle="modal" data-target="#SignInModal"><i
                                            class="fa fa-user"></i>
                                        Sign In</a></li>
                            </ul>
                            <% } else { %>
                                <ul>
                                    <li><a href="/account/signout"><i class="fa fa-user"></i>
                                            Sign Out</a></li>
                                </ul>
                                <% } %>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="SignUpModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <form action="/account/signup" method="post">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type=" button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h5 class="modal-title" id="exampleModalLabel">
                                    <h3 class="text-center"">Sign Up</h3>
                        </h5>
                        
                    </div>
                    <div class=" modal-body" style="margin: auto; width: 50%; padding: 10px">

                                        <span>Email:</span><br>
                                        <input style="width: 100%;" type="email" name="email" required><br>
                                        <span>Password:</span><br>
                                        <input style="width: 100%;" type="password" name="password" required><br>
                                        <span>Phone:</span><br>
                                        <input style="width: 100%;" type="text" name="phone" required><br>
                                        <span>Address:</span><br>
                                        <input style="width: 100%;" type="text" name="address" required><br>
                                        <span>Name:</span><br>
                                        <input style="width: 100%;" type="text" name="name" required><br>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="SignInModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form action="/account/signin" method="post">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type=" button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h5 class="modal-title" id="exampleModalLabel">
                                <h3 class="text-center"">Login</h3>
                        </h5>
                        
                    </div>
                    <div class=" modal-body" style="margin: auto; width: 50%; padding: 10px">

                                    <span>Email:</span><br>
                                    <input style="width: 100%;" type="email" name="email" id="emailinp" required><br>
                                    <span>Password:</span><br>
                                    <input style="width: 100%;" type="password" name="password" id="passwordinp"
                                        required><br>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                </form>
            </div>
        </div>

    </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="/"><span>AMD</span> - KStore</a></h1>
                    </div>
                </div>
                <% if (locals.user) { %>
                    <div class="col-sm-6">
                        <div class="shopping-item">
                            <a href="#">User: <span class="cart-amunt">
                                    <%= locals.user %>
                                </span></a>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/">Home</a></li>
                        <li><a href="/kstore">Processors</a></li>
                        <li><a href="#" disabled>Features ( Coming Soon )</a></li>
                        <li>
                            <form action="/kstore/search" method="get"><input
                                    style="margin-left: 200px; margin-top: 10px" type="text" placeholder="Search.."
                                    name="product"><button type="submit" style="border: 1px solid #ccc">Search</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->

    <div class="slider-area">
        <div class="zigzag-bottom"></div>
        <div id="slide-list" class="carousel carousel-fade slide" data-ride="carousel">

            <div class="slide-bulletz">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <ol class="carousel-indicators slide-indicators">
                                <li data-target="#slide-list" data-slide-to="0" class="active"></li>
                                <li data-target="#slide-list" data-slide-to="1"></li>
                                <li data-target="#slide-list" data-slide-to="2"></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <div class="single-slide">
                        <div class="slide-bg slide-one"></div>
                        <div class="slide-text-wrapper">
                            <div class="slide-text">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-6 col-md-offset-6">
                                            <div class="slide-content">
                                                <h2>The Fastest in the Games</h2>
                                                <p>Introducing the <a href=""> AMD Ryzen™ 5000 Series Desktop
                                                        Processors. </a></p>
                                                <a href="#" class="readmore">FIND RETAILERS</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <div class="single-slide">
                        <div class="slide-bg slide-two"></div>
                        <div class="slide-text-wrapper">
                            <div class="slide-text">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-6 col-md-offset-6">
                                            <div class="slide-content">
                                                <h2>Play It All with Ryzen™ and Radeon™</h2>
                                                <p>Browse preconfigured systems from our partners.</p>
                                                <a href="" class="readmore">Learn more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <div class="single-slide">
                        <div class="slide-bg slide-three"></div>
                        <div class="slide-text-wrapper">
                            <div class="slide-text">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-6 col-md-offset-6">
                                            <div class="slide-content">
                                                <h2>Performance to Rule Your Game</h2>
                                                <p>Introducing the <a href="">AMD Radeon™ RX 6000 Series graphics cards.
                                                    </a></p>
                                                <a href="" class="readmore">Learn more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div> <!-- End slider area -->

    <div class="promo-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo">
                        <i class="fa fa-refresh"></i>
                        <p>3 Years of Warranty & Customer Services</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo">
                        <i class="fa fa-truck"></i>
                        <p>AMD Radeon Support Software</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo">
                        <i class="fa fa-lock"></i>
                        <p>Up to date with technologies </p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo">
                        <i class="fa fa-gift"></i>
                        <p>Games Ultimately Support</p>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End promo area -->

    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="latest-product">
                        <h2 class="section-title">Top Processors</h2>
                        <div class="product-carousel">
                            <div class="single-product">

                                <% if(products) {products.forEach((product)=> { %>
                                    <h2><a href="/kstore/processors/<%= product._id %>">
                                            <%= product.model %>
                                        </a></h2>
                                    <div class="product-carousel-price">
                                        <ins>
                                            <%= product.price %>
                                        </ins>
                                    </div>
                            </div>
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="<%= product.picture %>" alt="">
                                    <div class="product-hover">
                                        <a href="/kstore/processors/<%= product._id %>" class="view-details-link"><i
                                                class="fa fa-link"></i> See details</a>
                                    </div>
                                </div>
                                <% })} %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End main content area -->

    <div class="brands-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="brand-wrapper">
                        <h2 class="section-title">Brands</h2>
                        <div class="brand-list">
                            <img src="https://phongvu.vn/cong-nghe/wp-content/uploads/2018/04/asus_logo_ISOI-1024x536.png"
                                alt="">
                            <img src="https://www.amd.com/system/files/styles/992px/private/2021-07/921575-amd-microsoft-windows-glow-1260x709.png?itok=Ewmrhxda"
                                alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End brands area -->

    <div class="product-widget-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="single-product-widget">
                        <h2 class="product-wid-title">Top Sellers</h2>
                        <a href="" class="wid-view-more">View All</a>
                        <% if (products) { %>
                            <% for(let i=0; i < 3; i++) { %>
                                <div class="single-wid-product">
                                    <a href="/kstore/processors/<%= products[i]._id %>"><img
                                            src="<%= products[i].picture %>" alt="" class="product-thumb"></a>
                                    <h2><a href="/kstore/processors/<%= products[i]._id %>">
                                            <%= products[i].model %>
                                        </a></h2>
                                    <div class="product-wid-rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product-wid-price">
                                        <ins>
                                            <%= products[i].price %>
                                        </ins>
                                    </div>
                                </div>
                                <% } %>
                                    <% } %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="single-product-widget">
                        <h2 class="product-wid-title">Recently Viewed</h2>
                        <a href="#" class="wid-view-more">View All</a>
                        <% if (products) { %>
                            <% for(let i=0; i < 3; i++) { %>
                                <div class="single-wid-product">
                                    <a href="/kstore/processors/<%= products[i]._id %>"><img
                                            src="<%= products[i].picture %>" alt="" class="product-thumb"></a>
                                    <h2><a href="/kstore/processors/<%= products[i]._id %>">
                                            <%= products[i].model %>
                                        </a></h2>
                                    <div class="product-wid-rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product-wid-price">
                                        <ins>
                                            <%= products[i].price %>
                                        </ins>
                                    </div>
                                </div>
                                <% } %>
                                    <% } %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="single-product-widget">
                        <h2 class="product-wid-title">Top New</h2>
                        <a href="#" class="wid-view-more">View All</a>
                        <% if (products) { %>
                            <% for(let i=0; i < 3; i++) { %>
                                <div class="single-wid-product">
                                    <a href="/kstore/processors/<%= products[i]._id %>"><img
                                            src="<%= products[i].picture %>" alt="" class="product-thumb"></a>
                                    <h2><a href="/kstore/processors/<%= products[i]._id %>">
                                            <%= products[i].model %>
                                        </a></h2>
                                    <div class="product-wid-rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product-wid-price">
                                        <ins>
                                            <%= products[i].price %>
                                        </ins>
                                    </div>
                                </div>
                                <% } %>
                                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End product widget area -->

    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2><span>AMD</span> - KStore</h2>
